# --- Webhook Signing Secrets ---
STRIPE_SIGNING_SECRET=whsec_xxx
GITHUB_WEBHOOK_SECRET=xxx
SLACK_SIGNING_SECRET=xxx
WEBHOOK_GENERIC_SECRET=xxx
# --- Storage Provider ---
STORAGE_DRIVER=s3            # s3|gcs|fs
STORAGE_BUCKET=your-bucket
STORAGE_PREFIX=backups/
STORAGE_LOCAL_DIR=./data_backups  # for fs
AWS_REGION=us-east-1                 # S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
GOOGLE_APPLICATION_CREDENTIALS=/path/to/sa.json   # GCS
# --- OIDC / SSO ---
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=
OIDC_SCOPES=openid profile email offline_access
# Optional claim mapping:
OIDC_ROLE_CLAIM=roles
OIDC_NAME_CLAIM=name
OIDC_EMAIL_CLAIM=email
# --- Server ---
PORT=3000
SESSION_SECRET=replace_with_strong_secret

# --- OAuth redirect base ---
OAUTH_REDIRECT_BASE=http://localhost:3000

# --- Google ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Microsoft ---
MS_CLIENT_ID=
MS_CLIENT_SECRET=
